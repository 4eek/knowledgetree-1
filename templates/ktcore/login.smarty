<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
    <title>{i18n arg_appname="$appname"}Login | #appname#{/i18n}</title>

    <link rel="stylesheet" href="{$rootUrl}/resources/css/kt-login.css" type="text/css" />

    <link rel="icon" href="{$rootUrl}/resources/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="{$rootUrl}/resources/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="{$rootUrl}/resources/css/kt-ie-icons.css" type="text/css" />

    <script type="text/javascript" src="{$rootUrl}/thirdpartyjs/curvycorners/rounded_corners_lite.inc.js"> </script>
    <script type="text/javascript" src="{$rootUrl}/resources/js/login_loader.js"> </script>
</head>
<body>
	<div id="loginbox_outer" {if ($disclaimer)} class="hasDisclaimer" {/if}>
	    <div id="{if $config->get("ui/poweredByDisabled") == '0'}loginbox_skin{else}loginbox{/if}" {if ($disclaimer)} class="hasDisclaimer" {/if}>
	        <div id="formbox">
		    	<form action="{$smarty.server.PHP_SELF}" method="POST" name="login">
		        	<input type="hidden" name="action" value="login" />
					<input type="hidden" name="cookieverify" value="{$cookietest}" />
					<input type="hidden" name="redirect" value="{$redirect}" />
					{if $config->get("ui/mainLogo") != ''}
						<img src="{$config->get("ui/mainLogo")}" alt="{$config->get("ui/mainLogoTitle")}" class="logoimage"/><br />
					{else}
						<img src="{$rootUrl}/resources/graphics/ktlogo-topbar-right.png" alt="{$appname}" class="logoimage" height="50" width="252"/><br />
					{/if}
			        {if ($errorMessage == null)}
					    <p class="descriptiveText">{i18n}Please enter your details below to login.{/i18n}</p>
					{else}
					    <div class="ktErrorMessage"><span>{$errorMessage|sanitize}</span></div>
					{/if}
		        	<label for="username">{i18n}Username{/i18n}</label>
					<input type="text" id="username" name="username"/>
					<label for="password">{i18n}Password{/i18n}</label>
					<input type="password" id="password" name="password"/>

					<label for="language">{i18n}Language{/i18n}</label>
					<select id="language" name="language">
					{foreach from=$languages key=sLang item=sLanguageName}
					    <option value="{$sLang}" {if $sLang == $selected_language}SELECTED="yes"{/if}>{$sLanguageName}</option>
					{/foreach}
					</select>
				    <div class="form_actions">
			        	<input type="submit" value="{i18n}login{/i18n}" />
			        	<p class="smaller"><a href="#" onclick="showBox();">Forgot Password?</a></p>
					</div>
	    		</form>
			</div>
	        {if ($disclaimer)}
	        <div id="disclaimerbox">
		    	<p>{$disclaimer}</p>
			</div>
			{/if}
			<p class="descriptiveText version">
				{i18n}Access to this service is subject to the KnowledgeTreeLive <a href="http://www.knowledgetree.com/about/legal/live">Terms and Conditions</a> of use.{/i18n}<br/>
				{i18n}&copy; 2007 <a href="http://www.knowledgetree.com/">The Jam Warehouse Software (Pty) Ltd.</a> All Rights Reserved{/i18n}
			</p>
	        <div id="bottomspacer"></div>
	        <div class="floatClear"></div>
	    </div>
	    <div id="forgot_box">
	    	<form name="forgot_form" action="" method="POST">
	    	<table width="80%">
	    		<tr>
	    			<td><div class="close_box" id="close_box" onclick="hideBox();" onmouseover="glow();" onmouseout="unglow();">Close</div></td>
	    		</tr>
	    		<tr>
	    			<input type="hidden" value="request_password_reset" name="request_password_reset" id="request_password_reset">
	    			<td>Please note that this feature is only used to reset the ADMIN password. System users should contact admin to reset their password.</td>
	    		</tr>
	    		<!--<tr>
	    			<td><label for="company_name">Company Name</label>
	    			<input type="text" id="company_name" name="company_name"></input></td>
	    		</tr>-->
	 			<tr>
	 				<td><label for="email">Email Address</label>
	 				<input type="text" id="email" name="email"></input></td>
	 			</tr>
	 			<tr>
	 				<td class="form_actions"><input type="submit" value="{i18n}submit{/i18n}" /></td>
	 				<td></td>
	 			</tr>
	    	</table>
	    	</form>
	    </div>
	    <div id="reset_box">
	    	<form name="reset_form" action="" method="POST">
		    	<table width="80%">
		    		<tr>
		    			<input type="hidden" name="perform_password_reset" value="perform_password_reset" id="perform_password_reset">
		    			<td>Please note that this feature is only used to reset the ADMIN password. System users should contact admin to reset their password.</td>
		    		</tr>
		    		<tr>
		    			<td><label for="full_name">Full Name</label>
		    			<input type="text" id="full_name" name="full_name"></input></td>
		    		</tr>
		 			<tr>
		 				<td><label for="email">Email Address</label>
		 				<input type="text" id="email" name="email"></input></td>
		 			</tr>
		 			<tr>
		 				<td><label for="new_password">New password</label>
		 				<input type="password" id="new_password" name="new_password"></input></td>
		 			</tr>
		 			<tr>
		 				<td><label for="new_password_repeat">Repeat new password</label>
		 				<input type="password" id="new_password_repeat" name="new_password_repeat"></input></td>
		 			</tr>
		 			<tr>
		 				<td class="form_actions"><input type="submit" value="{i18n}submit{/i18n}" /></td>
		 				<td></td>
		 			</tr>
		    	</table>
	    	</form>
	    </div>
	    {if $reset_password == true}
	    	<script type="text/javascript">showResetBox();</script>
	    {else}
	    	<script type="text/javascript">hideResetBox();</script>
	    {/if}
	</div>
</body>
</html>
